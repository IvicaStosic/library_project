<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
<form action="/admin/<% if(editing) {%>edit_book<% } else{ %>add_book<% } %>" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" value="<% if(editing){ %><%= book.title %><% } %>">
        </div>
        <div>
            <label for="author">Author:</label>
            <input type="text" name="author" id="author" value="<% if(editing){ %><%= book.author %><% } %>">
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea name="description" id="description" cols="30" rows="10">
                <% if(editing){ %><%= book.description %><% } %>
            </textarea>
        </div>
        <% if(editing) { %>
            <input type="hidden" value="<%= book._id %>" name="bookId"> 
        <% } %>
        <button type="submit"><% if(editing){ %>Edit Book<% } else { %>Add Book<% } %></button>
    </form>
</main>   
<%- include('../includes/end.ejs') %>